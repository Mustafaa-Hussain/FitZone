<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timer_main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/training_acv"
    android:focusableInTouchMode="true"
    tools:context=".DayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/training_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/like_button"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:text="@string/timer" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/training_gif_file"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/like_button"
            android:padding="5dp"
            android:src="@drawable/dynamic_push_ups" />


        <TextView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            tools:text="Timer" />

        <ToggleButton
            android:id="@+id/timer_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:textOff="@string/pause"
            android:textOn="@string/start" />

        <Button
            android:id="@+id/training_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/like_button"
            android:text="@string/finish"
            android:textAllCaps="false"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>