<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/custom_rectangle"
    android:gravity="center"
    android:layout_margin="5dp"
    android:elevation="15dp"
    app:cardCornerRadius="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/like"
            android:layout_weight="2"
            android:background="@drawable/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/like"
            android:drawableStart="@drawable/plus_one"
            android:paddingStart="15dp"
            android:hint="like"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/noOfLikes"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/default_no_of_likes"
            android:textColor="@color/mainColor"/>

        <Button
            android:id="@+id/comment"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="@string/comment"
            android:drawableStart="@drawable/comment_icon"
            android:paddingStart="15dp"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/noOfComments"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/default_no_of_comments"
            android:textColor="@color/black"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>