<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/custom_rectangle"
    android:gravity="center"
    android:layout_margin="5dp"
    android:elevation="15dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/profile_icon"/>
            <TextView
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:id="@+id/username"
                android:text="@string/username"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_date"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/initDate"/>
            <Button
                android:id="@+id/more"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="@string/more"
                android:layout_gravity="center"
                android:background="@drawable/more_button"
                android:textAllCaps="false" />

        </LinearLayout>

        <!--main post card-->
        <androidx.cardview.widget.CardView
            android:id="@+id/main_post_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/regular_post_gray"
            android:layout_margin="10dp"
            android:visibility="visible">

            <!--main post parts-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:id="@+id/caption"
                    android:text="@string/post_title"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/postContent"
                    android:text="@string/post_content"/>


                <!--achievement post card-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/achievement_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/achievement_post_yellow"
                    android:layout_marginTop="10dp"
                    android:visibility="visible">
                    <RatingBar
                        android:id="@+id/rating_bar_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="3.5"
                        android:stepSize="0.5"
                        android:layout_gravity="center"
                        android:padding="10dp"/>
                </androidx.cardview.widget.CardView>
                <!--image post card-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/image_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/image_post"
                    android:visibility="visible">
                    <ImageView
                        android:id="@+id/image_post"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/static_squat"
                        android:layout_gravity="center"
                        android:padding="10dp"/>
                </androidx.cardview.widget.CardView>
                <!--video post card-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/video_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/video_post"
                    android:visibility="visible">
                    <VideoView
                        android:id="@+id/video_post"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:foreground="@drawable/dynamic_squat"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--like and comment bart-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="25dp"
            app:cardBackgroundColor="@color/semi_white"
            app:cardCornerRadius="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <Button
                    android:id="@+id/like"
                    android:layout_weight="2"
                    android:background="@drawable/like_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/like"
                    android:drawableStart="@drawable/min_one"
                    android:paddingStart="10dp"
                    android:hint="like"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/noOfLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/default_no_of_likes"
                    android:textColor="@color/mainColor"/>

                <Button
                    android:id="@+id/comment"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="@string/comment"
                    android:drawableStart="@drawable/comment_icon"
                    android:paddingStart="15dp"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/noOfComments"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/default_no_of_comments"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>